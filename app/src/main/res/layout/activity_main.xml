<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <Button
        android:text="0"
        android:id="@+id/score_text"
        android:enabled="false"
        android:fontFamily="@font/fredokaone"
        android:backgroundTint="@color/transparent_black"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <TextView
        android:text="Juguemos con"
        android:textSize="35sp"
        android:fontFamily="@font/fredokaone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/titulo"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/titulo"
        android:text="Aritmética"
        android:textSize="50sp"
        android:fontFamily="@font/fredokaone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:textColor="@color/yellow_p"
        android:layout_marginBottom="150dp"/>
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <Button android:text="Multiplicación"
            android:drawableLeft="@drawable/multiplicacion"
            android:id="@+id/multiplication_button"
            android:fontFamily="@font/fredokaone"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_margin="10dp"/>
        <Button android:text="División"
            android:backgroundTint="@color/green_p"
            android:drawableLeft="@drawable/division"
            android:id="@+id/division_button"
            android:fontFamily="@font/fredokaone"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_margin="10dp"/>
        <Button android:text="Suma"
            android:backgroundTint="@color/purple_p"
            android:drawableLeft="@drawable/suma"
            android:id="@+id/plus_button"
            android:fontFamily="@font/fredokaone"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_margin="10dp"/>
        <Button android:text="Resta"
            android:backgroundTint="@color/red_p"
            android:drawableLeft="@drawable/resta"
            android:id="@+id/minus_button"
            android:fontFamily="@font/fredokaone"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_margin="10dp"/>



    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>